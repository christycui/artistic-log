%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: sessions_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f|
        %header
          %h1 Sign In
        %br/
        %br/
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
        %br/
        %fieldset
          = submit_tag "Sign In", class: "btn btn-default submit_btn"
  