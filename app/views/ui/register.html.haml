%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag '' do
        %header
          %h1 Register
        %br/
        %br/
        %fieldset
          .form-group
            .row
              .col-sm-2
                = label_tag :username
              .col-sm-4
                = email_field_tag :username, nil, class: 'form-control'
          .form-group
            .row
              .col-sm-2
                = label_tag :email_address
              .col-sm-4
                = email_field_tag :email_address, nil, class: 'form-control'
          .form-group
            .row
              .col-sm-2
                = label_tag :password
              .col-sm-4
                = password_field_tag :password, nil, class: 'form-control'
        %br/
        %fieldset.form-group.action.submit_btn
          = submit_tag "Join!", class: "btn btn-default"
  